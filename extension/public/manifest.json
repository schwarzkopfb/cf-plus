{
    "name": "Curvefever Plus",
    "description": "Centrally distributed randomization for Curvefever inventory",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16": "icons/logo16.png",
        "48": "icons/logo48.png",
        "128": "icons/logo128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://curvefever.pro/*"
            ],
            "css": [
                "content.css"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab"
    ]
}